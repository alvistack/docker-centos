{
  "builders": [
    {
      "changes": [
        "ENV LANG en_US.UTF-8",
        "ENV LC_ALL en_US.UTF-8",
        "ENV SHELL /bin/bash",
        "ENV TZ UTC",
        "VOLUME /root",
        "WORKDIR /root",
        "EXPOSE 22",
        "ENTRYPOINT [\"catatonit\", \"-g\", \"--\", \"docker-entrypoint.sh\"]",
        "CMD [\"/usr/sbin/sshd\", \"-eD\"]"
      ],
      "commit": true,
      "image": "quay.io/centos/centos:stream8",
      "type": "docker"
    }
  ],
  "post-processors": [
    {
      "inline": [
        "set -eu",
        "export _ID=$(docker images | awk '{ print $3 }' | awk 'NR==2')",
        "mkdir -p output-docker",
        "docker save $_ID | gzip -9 > output-docker/image.tar.gz"
      ],
      "type": "shell-local"
    }
  ],
  "provisioners": [
    {
      "inline": [
        "set -eu",
        "yum makecache",
        "yum update -y",
        "yum install -y ca-certificates curl gcc iproute python3 python3-devel sudo"
      ],
      "type": "shell"
    },
    {
      "galaxy_file": "./ansible-galaxy-requirements.yml",
      "inventory_directory": "./",
      "playbook_file": "./packer.yml",
      "type": "ansible",
      "user": "root"
    }
  ]
}

