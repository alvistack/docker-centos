{
  "builders": [
    {
      "changes": [
        "ENV LANG=en_US.UTF-8",
        "ENV LC_ALL=en_US.UTF-8",
        "ENV SHELL=/bin/bash",
        "ENV TZ=UTC",
        "VOLUME /root",
        "WORKDIR /root",
        "EXPOSE 22",
        "ENTRYPOINT [\"catatonit\", \"-g\", \"--\", \"docker-entrypoint.sh\"]",
        "CMD [\"/usr/sbin/sshd\", \"-eD\"]"
      ],
      "commit": true,
      "image": "quay.io/centos/centos:stream9",
      "privileged": true,
      "type": "docker"
    }
  ],
  "post-processors": [
    {
      "inline": [
        "set -eu",
        "export _ID=$(docker images | awk '{ print $3 }' | awk 'NR==2')",
        "mkdir -p output-docker",
        "docker save $_ID | gzip -9 > output-docker/image.tar.gz"
      ],
      "type": "shell-local"
    }
  ],
  "provisioners": [
    {
      "inline": [
        "set -eu",
        "chmod u+rw /etc/*shadow* /etc/*passwd* /etc/*group*",
        "echo 'zchunk=False' >> /etc/dnf/dnf.conf",
        "yum makecache",
        "yum update -y",
        "yum install -y --allowerasing ca-certificates curl gcc glibc-common glibc-langpack-en hostname iproute python3 sudo yum-utils",
        "yum install -y --allowerasing coreutils curl"
      ],
      "type": "shell"
    },
    {
      "galaxy_file": "./ansible-galaxy-requirements.yml",
      "inventory_directory": "./",
      "playbook_file": "./packer.yml",
      "type": "ansible",
      "user": "root"
    },
    {
      "inline": [
        "set -eu",
        "rm -rf /etc/ssh/ssh_host_*"
      ],
      "type": "shell"
    }
  ]
}

